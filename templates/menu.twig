{# MENU COMES FROM menu.twig #}

{% if menu %}
	<ul class="block gap-0 md:inline-flex md:gap-2 ">
		{% for item in items %}
			 <li class="{{ item.classes | join(' ') }} relative group mr-4" >
                <a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
                <div class = "dropdown">
				{% if item.children %}
                    <ul class="absolute hidden group-hover:block bg-black">
                        {% for child in item.children %}
                            <li class="{{ child.classes | join(' ') }}  " >
                                <a target="{{ child.target }}" href="{{ child.link }}">{{ child.title }}</a>    
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
                </div>
			</li>
		{% endfor %}
	</ul>
{% endif %}
