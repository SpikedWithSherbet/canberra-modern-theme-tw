	{% block header %}
		<div class="wrapper block md:inline-flex bg-primary text-white">
				<a class="hdr-logo-link px-5 pt-9 pl-10 pb-3 md:pb-9" role="banner" href="{{site.url}}" rel="home"><img src="{{ site.theme.link }}/templates/logo.png" class="w-36 pl-5"></a>  <!-- Find better way to scale image later, please! -->
