{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}{% endblock %}
</head>{% endblock %}<body class="bg-black {{body_class}}" data-template="base.twig">
{{ function('wp_body_open') }}
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header">
	{% block header %}
		<div class="wrapper flex bg-primary text-white">
			<h1 class="hdr-logo py-3 px-3 font-bold" role="banner">
				<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
			</h1>
			<nav id="nav-main" class="nav-main px-5 py-3 font-bold" role="navigation">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</nav>
			<!-- #nav -->
		</div>
	{% endblock %}
	
</header>

<section id="content" role="main" class="content-wrapper bg-primary text-white py-7">
	{% if title %}
		<!-- this title comes from the base.twig file -->
		<h1 class="font-bold">{{title}}</h1>
	{% endif %}
	<div class="wrapper">
		{% block content %}
			Sorry, no content
		{% endblock %}
	</div>
	{% if sidebar %}
		<aside class="layout-sidebar">
			{{sidebar}}
		</aside>
	{% endif %}
</section>

{% block footer %}
	<footer id="footer bg-secondary">
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
{% endblock %}</body></html>
