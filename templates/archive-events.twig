{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}

<div class="block lg:hidden">
<ul class="inline group-hover:block bg-white text-black ml-3 min-[321px]:ml-7 p-4 rounded-xl ">
                                                    <li class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-264 font-semibold inline text-black mx-5 text-sm min-[321px]:text-base">
                                <a target="_self" href="http://canberramodern.local/events2/galleries/">Galleries</a>    
                            </li>
</ul>

</div>

<h1 class="font-bold ml-16 text-4xl">{{title}}</h1>


	{% for post in posts %}
		{# it will look for tease-events.twig, and then go to tease.twig #}
		{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
	{% endfor %}

	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}

	<div
		class="debug p-8 bg-debug hidden">
		{# useful for debugging, delete later #}
		<h1>Debug info</h1>

		<p>file name: archive-events.twig</p>

		{# Output what is in the post #}
		{# {{dump(post)}} #}
	</div>

{% endblock %}
